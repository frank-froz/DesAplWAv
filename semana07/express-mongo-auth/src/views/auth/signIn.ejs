
<div class="row">
  <div class="col s12 m8 l6 offset-m2 offset-l3">
    <div class="card hoverable">
      <div class="card-content">
        <div class="center-align">
          <i class="material-icons large blue-text text-darken-3">account_circle</i>
          <h4 class="blue-text text-darken-3">Iniciar Sesión</h4>
          <p class="grey-text">Ingresa tus credenciales para acceder</p>
        </div>
        
        <form id="signInForm">
          <div class="input-field">
            <i class="material-icons prefix">email</i>
            <input id="email" name="email" type="email" class="validate" required>
            <label for="email">Correo electrónico</label>
            <span class="helper-text" data-error="Ingresa un correo válido"></span>
          </div>
          
          <div class="input-field">
            <i class="material-icons prefix">lock</i>
            <input id="password" name="password" type="password" required>
            <label for="password">Contraseña</label>
          </div>
          
          <div class="center-align" style="margin-top: 30px;">
            <button class="btn-large waves-effect waves-light blue darken-3" type="submit">
              Entrar <i class="material-icons right">login</i>
            </button>
          </div>
        </form>
        
        <div class="center-align" style="margin-top: 20px;">
          <p class="grey-text">
            ¿No tienes cuenta? 
            <a href="/signUp" class="blue-text text-darken-3">Regístrate aquí</a>
          </p>
        </div>
      </div>
    </div>
    
    <!-- Información de usuarios de prueba -->
