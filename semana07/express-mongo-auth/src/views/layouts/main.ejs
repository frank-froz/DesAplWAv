<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title || "AuthApp - Sistema de Autenticación" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }
    main {
      flex: 1 0 auto;
    }
    .page-footer {
      background-color: #1565c0;
    }
    .card {
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      border-radius: 12px;
    }
    .btn {
      border-radius: 25px;
    }
    .brand-logo {
      font-weight: 300;
    }
  </style>
</head>
<body class="grey lighten-5">

  <nav class="blue darken-3" role="navigation">
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo">
        <i class="material-icons left">security</i>AuthApp
      </a>
      
      <!-- Menú móvil -->
      <a href="#" data-target="mobile-nav" class="sidenav-trigger">
        <i class="material-icons">menu</i>
      </a>
      
      <!-- Navegación desktop -->
      <ul id="nav-desktop" class="right hide-on-med-and-down">
        <!-- Se llenará dinámicamente con JavaScript -->
      </ul>
    </div>
  </nav>

  <!-- Menú lateral móvil -->
  <ul class="sidenav" id="mobile-nav">
    <!-- Se llenará dinámicamente con JavaScript -->
  </ul>

  <main class="container" style="margin-top: 40px; margin-bottom: 40px;">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="page-footer blue darken-3">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="white-text">AuthApp</h5>
          <p class="grey-text text-lighten-4">Sistema de autenticación y gestión de usuarios</p>
        </div>
        <div class="col l4 offset-l2 s12">
          <h5 class="white-text">Enlaces</h5>
          <ul>
            <li><a class="grey-text text-lighten-3" href="/signIn">Iniciar Sesión</a></li>
            <li><a class="grey-text text-lighten-3" href="/signUp">Registrarse</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
        © <%= new Date().getFullYear() %> AuthApp - Desarrollado con Express & MongoDB
      </div>
    </div>
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="/js/auth.js"></script>
  <script>
    // Inicializar componentes de Materialize
    document.addEventListener('DOMContentLoaded', function() {
      M.AutoInit();
    });
  </script>
</body>
</html>
